<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/dugmeZaSlanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/poslaji"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/porukaSlanja"
        />

    <TextView
        android:id="@+id/porukaSlanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unesiPoruka"

        app:layout_constraintBottom_toTopOf="@id/tekstSlanja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tekstSlanja"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/porukaSlanja"
        app:layout_constraintBottom_toBottomOf="parent"

        android:gravity="center"
        android:background="@color/colorPrimary"
        />

</android.support.constraint.ConstraintLayout>